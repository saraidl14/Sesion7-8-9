<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sesion7_8_9.Animal6"
             Title="Dragones Azules">
    <ScrollView>
        <VerticalStackLayout>
            <!-- Título principal de la página, indicando que trata sobre los dragones azules -->

            <Label 
             Text="Azules"
             Style="{StaticResource Headline}"
             VerticalOptions="Center" 
             HorizontalOptions="Center" />
            <!-- Imagen representativa de los dragones azules -->
             <Image Source="azul.png" 
             HeightRequest="400"/>
            <!-- Botón para ver más detalles sobre los dragones azules -->
            <Button Text="Detalles"
             Clicked="DetallesBTN"
             x:Name="btnLBL" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>